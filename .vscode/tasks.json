{
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"showOutput": "always",
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "build",
			"args": ["install", "--silent"],
			"isBuildCommand": true,
			"problemMatcher": ["$tsc"]
		},
		{
			"taskName": "test",
			"args": ["test"]
		}
	]
}
